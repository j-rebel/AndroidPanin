<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".T_211">

    <include
        android:id="@+id/included_bar"
        layout="@layout/activity_toolbar" />

    <EditText
        android:id="@+id/sumInput"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="99dp"
        android:autofillHints="@string/input_sum"
        android:ems="10"
        android:hint="@string/input_sum"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/included_bar"
        tools:ignore="UnusedAttribute" />

    <EditText
        android:id="@+id/payInfoInput"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="99dp"
        android:autofillHints="@string/input_pay_info"
        android:ems="10"
        android:hint="@string/input_pay_info"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sumInput"
        tools:targetApi="o" />

    <CheckBox
        android:id="@+id/payCardChkBx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/check_pay_card"
        app:layout_constraintStart_toStartOf="@+id/payInfoInput"
        app:layout_constraintTop_toBottomOf="@+id/payInfoInput" />

    <CheckBox
        android:id="@+id/payMobileChkBx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/check_pay_mobile"
        app:layout_constraintStart_toStartOf="@+id/payInfoInput"
        app:layout_constraintTop_toBottomOf="@+id/payCardChkBx" />

    <CheckBox
        android:id="@+id/payCashChkBx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/check_pay_cash"
        app:layout_constraintStart_toStartOf="@+id/payInfoInput"
        app:layout_constraintTop_toBottomOf="@+id/payMobileChkBx" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="169dp"
        android:text="@string/ok_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payCashChkBx" />



</androidx.constraintlayout.widget.ConstraintLayout>